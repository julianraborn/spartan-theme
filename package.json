{
	"name": "rm-divi-child",
	"version": "1.0.0",
	"private": true,
	"description": "Divi child theme",
	"repository": "git+https://github.com/Raborn-Media/Divi-Child-Theme.git",
	"main": "src/index.js",
	"author": "Raborn Media <websites@rabornmedia.com>",
	"license": "GPL-3.0",
	"homepage": "https://github.com/Raborn-Media/Divi-Child-Theme/#readme",
	"engines": {
		"node": ">=14",
		"npm": ">=7"
	},
	"dependencies": {
		"@wordpress/eslint-plugin": "12.8.0",
		"@wordpress/scripts": "^23.3.0",
		"clean-webpack-plugin": "^4.0.0",
		"copy-webpack-plugin": "^11.0.0",
		"cross-env": "^7.0.3",
		"css-minimizer-webpack-plugin": "^4.0.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-webpack-plugin": "^3.2.0",
		"imagemin-webpack-plugin": "^2.4.2",
		"postcss-loader": "^7.0.1",
		"postcss-move-props-to-bg-image-query": "^4.0.0",
		"postcss-preset-env": "^7.7.2",
		"sass-loader": "^13.0.2",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-webpack-plugin": "^3.3.0",
		"svg-spritemap-webpack-plugin": "^4.5.0",
		"svg-transform-loader": "^2.0.13"
	},
	"devDependencies": {
		"@evilmartians/lefthook": "^1.2.7",
		"@wordpress/prettier-config": "^1.4.0",
		"autoprefixer": "^10.4.8",
		"browser-sync": "^2.27.10",
		"css-loader": "^6.7.1",
		"dir-archiver": "^1.1.1",
		"glob": "^8.0.3",
		"mini-css-extract-plugin": "^2.6.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"prettier": "npm:wp-prettier@^2.6.2",
		"webpack-cli": "^4.10.0",
		"webpack-merge": "^5.8.0"
	},
	"scripts": {
		"build": "cross-env NODE_ENV=production wp-scripts build --config webpack.prod.js",
		"build:all": "composer install --quiet && npm run build",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"dev": "npm run watch",
		"format": "run-p format:*",
		"format:css": "npx prettier '**/*.scss' --write && npm run lint:css -- --fix",
		"format:js": "wp-scripts format && npm run lint:js -- --fix",
		"format:md": "npx markdownlint-cli . --fix",
		"format:php": "composer run-script format",
		"lint": "run-p lint:*",
		"lint:css": "wp-scripts lint-style '**/*.scss'",
		"lint:js": "wp-scripts lint-js",
		"lint:md": "wp-scripts lint-md-docs",
		"lint:php": "composer run-script lint",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"start": "cross-env NODE_ENV=development wp-scripts start",
		"sync": "browser-sync start --https --proxy http://divi-child.local --no-open --files 'build/*.*, **/*.html, **/*.php, !node_modules/**/*.html'",
		"watch": "run-p start sync",
		"bundle": "dir-archiver --src . --dest ../divi-child.zip --exclude webpack.config.js .eslintignore webpack.prod.js src postcss.config.js lefthook.yml .browserlistrc .prettierignore .prettierrc.js .vscode .stylelintignore .nvmrc .editorconfig .eslintignor .markdownlint.json .markdownlintignore .eslintrc.js .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock"
	}
}
